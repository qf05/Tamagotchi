<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shell_01"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/shell_01" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/shell_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/shell_02" />

            <TextView
                android:id="@+id/centerShell2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/create"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/centerShell2"
                android:onClick="createPet"
                android:background="@drawable/button"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="@string/create_new_pet" />

            <Button
                android:id="@+id/del"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/centerShell2"
                android:onClick="deletePet"
                android:background="@drawable/button"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="@string/delete_pet" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/shell_03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/shell_03" />

            <TextView
                android:id="@+id/centerShell3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/rename"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/centerShell3"
                android:onClick="changeNamePet"
                android:background="@drawable/button"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="@string/change_name" />

            <Button
                android:id="@+id/history"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/centerShell3"
                android:onClick="history"
                android:background="@drawable/button"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="@string/history" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/shell_04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/shell_04" />

            <TextView
                android:id="@+id/centerShell4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/notification"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/centerShell4"
                android:onClick="notification"
                android:background="@drawable/button"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="@string/notification" />

            <CheckBox
                android:id="@+id/soundCheckbox"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/centerShell4"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"
                android:paddingStart="20dp"
                android:textSize="20dp"
                android:onClick="sound"
                android:textColor="#000"
                android:background="@drawable/button"
                android:text="@string/sound"
                android:button="@drawable/checkbox_selector"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/shell_07"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/shell_05" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/shell_08"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/shell_06" />
    </LinearLayout>

    <Button
        android:id="@+id/homeFromSettings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/home"
        android:onClick="goHome" />
</RelativeLayout>